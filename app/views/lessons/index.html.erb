<h1>All our Lessons:</h1>

<ul>
  <% @lesson.each do |lesson| %>
    <li><%=link_to lesson.name, lesson_path(lesson) %><%= link_to "Edit", edit_lesson_path(lesson) %> |
                                                      <%= link_to "Delete", lesson_path(lesson),
                              :data => {:confirm =>"Are you sure?", :method =>"delete"} %></li>
  <% end %>
</ul>

<p><%=link_to "Create new Lesson", new_lesson_path %><p>
